package ex2;
import java.util.Scanner;
class CircleComputation {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Scanner scan = new Scanner (System.in);
		
		double radius;//declare variable
		double diameter;
		double area;
		double circumference;
		
		System.out.println("Please enter the radius of the circle");
		radius = scan.nextDouble();
		
		diameter = 2.0 * radius;         //Declare formulae
		area = Math.PI * radius * radius;
		circumference = 2.0 * Math.PI * radius;
		
		System.out.println("Radius of circle : " +radius);
		System.out.printf("Area of circle :%.2f ",area );
		System.out.printf("\nDiameter of circle :%.2f ",diameter );
		System.out.printf("\nCircumference of circle : %.2f",circumference );

	}

}
