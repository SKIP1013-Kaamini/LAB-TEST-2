package ex2;
import java.util.Scanner;
class CylinderComputation {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Scanner scan = new Scanner (System.in);
		
		double radius;
		double height;
		double surfaceArea;
		double baseArea;
		double volume;
		
		System.out.println("Enter radius of cylinder :");
		radius = scan.nextDouble();
		System.out.println("Enter height of cylinder :");
		height = scan.nextDouble();
		
		baseArea = Math.PI * radius * radius;                    //Formulae
		surfaceArea = 2.0 * Math.PI * radius + 2.0 * baseArea;
		volume = baseArea * height;
		
		System.out.printf("Surface area of cylinder : %.2f",surfaceArea);
		System.out.printf("\nBase area of cylinder  : %.2f",baseArea);
		System.out.printf("\nVolume of cylinder  : %.2f",volume);
	
		

	}

}
